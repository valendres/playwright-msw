{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2017", "DOM"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
